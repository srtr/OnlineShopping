@model OnlineShopping.WebUI.Models.ProductsListViewModel
@{
    ViewBag.Title = "Products";
    
}
<div class="row">
    @foreach (var p in Model.Products)
    {
        Html.RenderPartial("ProductSummary", p);
    }
</div>

<ul class="pagination pagination-lg">
    @Html.PageLinks(Model.PagingInfo, x => Url.Action("List", new { page = x, categoryName = Model.CurrentCategoryName }))
</ul>

<ul class="pager">
    @{ if (@Model.PagingInfo.CurrentPage > @Model.PagingInfo.TotalPages)
       {
        <li><a href="#">0 of @Model.PagingInfo.TotalPages </a></li>
       }
       else
       {
        <li><a href="#">@Model.PagingInfo.CurrentPage of @Model.PagingInfo.TotalPages </a></li>
       }
    }

</ul>

